<!doctype html>
<head>
    <title>{{item.title}}</title>
    <style>
        .noPageBreak{
            page-break-inside: avoid;
        }

        #break{
            page-break-before: always;
        }

        .multiCol{
            float: left;
            width: 45%;
            margin: 10px;
        }
        tr:nth-child(odd){
            background-color: #f2f2f2;
        }
        th{
            text-align: right;
            color: #737373;
            padding: 7px;
        }
        td{
            text-align: top;
            padding: 7px;
        }
        #by{
            position: absolute;
            font-size: x-small;
            color: #a6a6a6;
            bottom: 0;
            right: 10px;
        }
    </style>
</head>
<body>
<h1>{{item.title}}</h1>
<h2>{{strings.details_head}}</h2>
    
    <!-- one row for every detail -->
    <table>
        {{#item.details}}
	        <tr>
	            <th>{{desc}}</th>
	            <td>{{content}}</td>
	        </tr>
        {{/item.details}}
    </table>




    <!-- Only show heading if there are copies -->
{{^item.copies.isEmpty}}
    <h2 id="break">{{strings.copies_head}}</h2>
    <!-- one table for every copy, show all the rows that have data -->
    {{#item.copies}}
		<div>
		        <table class="multiCol noPageBreak">
		    	{{#barcode}}
			        <tr>
                        <th>{{strings.barcode}}</th>
			            <td>{{barcode}}</td>
			        </tr>
			    {{/barcode}}

			    {{#department}}
			        <tr>
                        <th>{{strings.department}}</th>
			            <td>{{department}}</td>
			        </tr>
			    {{/department}}

			    {{#branch}}
			        <tr>
                        <th>{{strings.branch}}</th>
			            <td>{{branch}}</td>
			        </tr>
			    {{/branch}}

			    {{#status}}
			        <tr>
                        <th>{{strings.status}}</th>
			            <td>{{status}}</td>
			        </tr>
			    {{/status}}

			    {{#location}}
			        <tr>
                        <th>{{strings.location}}</th>
			            <td>{{location}}</td>
			        </tr>
			    {{/location}}

			    {{#returnDate}}
			        <tr>
                        <th>{{strings.return_date}}</th>
			            <td>{{returnDate}}</td>
			        </tr>
			    {{/returnDate}}

			    {{#reservations}}
			        <tr>
                        <th>{{strings.reservations}}</th>
			            <td>{{reservations}}</td>
			        </tr>
			    {{/reservations}}

			    {{#shelfmark}}
			        <tr>
                        <th>{{strings.shelfmark}}</th>
			            <td>{{shelfmark}}</td>
			        </tr>
			    {{/shelfmark}}

			    {{#url}}
			        <tr>
                        <th>{{strings.url}}</th>
			            <td>{{url}}</td>
			        </tr>
			    {{/url}}
		    </table>
        </div>
        <div id="by">
            <p>printed from Web Opac App (opacapp.net)</p>
        </div>
    {{/item.copies}}
{{/item.copies.isEmpty}}

    <!-- Only show heading if there are volumes -->
{{^item.volumes.isEmpty}}
    <h2>{{strings.volumes}}</h2>
	    <ul>
            {{#item.volumes}}
	        	<li>{{title}}</li>
            {{/item.volumes}}
	    </ul>
    <div id="by">
        <p>printed from Web Opac App (opacapp.net)</p>
    </div>
{{/item.volumes.isEmpty}}
<div id="by">
    <p>printed from Web Opac App (opacapp.net)</p>
</div>
</body>